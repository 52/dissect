<% provide :title, @blog.title %>

<main role="main" class="container">
  <div class="row">
    <div class="col-md-8 blog-main">

      <div class="blog-post">

        <h2 class="blog-post-title">
          <%= @blog.title %>
        </h2>

        <p>
          <%= @blog.topic.title %>
        </p>
        <%= render "blogs/blog_post_meta", blog: @blog %>

        <%= markdown @blog.body %>

      </div>
    </div>

    <%= render "layouts/blogs/sidebar" %>
  </div>

  <%= render "blogs/comment_form" %>
  <div id="comments" data-blog-id="<%= @blog.id %>">
    <%= render @blog.comments %>
  </div>

</main>
