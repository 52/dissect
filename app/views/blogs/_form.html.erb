<%= form_with(model: blog, local: true) do |form| %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, id: :blog_title, class: "form-control" %>
    <%= render "shared/form_field_error_message", object: blog, field: :title %>
  </div>

  <div class="form-group">
    <%= form.label :body %>
    <%= form.text_area :body, id: :blog_body, rows: "10", class: "form-control" %>
    <%= render "shared/form_field_error_message", object: blog, field: :body %>

  </div>

  <div class="form-group">
    <%= form.submit button_label, class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "shared/highlight_error_form_field" %>
