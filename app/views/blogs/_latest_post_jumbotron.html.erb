<div class="container">
  <div class="jumbotron p-3 p-md-5 text-white rounded bg-dark">
    <div class="col-md-6 px-0">
      <h1 class="display-4 font-italic">
        <%= post.title %>
      </h1>
      <p class="lead my-3">
        <%= excerpt post.body, "." %>
      </p>
      <p class="lead mb-0">
        <%= link_to "Continue reading...", post, class: "text-white font-weight-bold" %>
      </p>
    </div>
  </div>
</div>
