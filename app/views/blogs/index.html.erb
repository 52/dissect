<% provide :title, "Blog" %>

<%= render("blogs/latest_post_jumbotron", post: @blogs.first) if @blogs.any? %>

<main role="main" class="container">
  <div class="row">
    <div class="col-md-8 blog-main">
      <h3 class="pb-3 mb-4 font-italic border-bottom">
        My blog posts
      </h3>
      <div class="blog-post">
        <%= render @blogs %>
      </div>
    </div>

    <%= render "layouts/blogs/sidebar" %>
  </div>
</main>
