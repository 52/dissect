<%= render "portfolios/jumbotron" %>

<div class="container">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag portfolio_item_image(@portfolio_item) %>
    </div>

    <div class="col-md-5">
      <h1><%= @portfolio_item.title %></h1>

      <em><%= @portfolio_item.subtitle %></em>

      <p><%= @portfolio_item.body %></p>

      <% if @portfolio_item.technologies.any? %>
        <h2>Technologies used:</h2>
        <ul>
          <% @portfolio_item.technologies.each do |technology| %>
            <li><%= technology.name %></li>
          <% end %>
        </ul>
      <% end %>

      <% if logged_in? :site_admin %>
        <%= link_to "Edit", edit_portfolio_path(@portfolio_item), type: "button", class: "btn btn-secondary" %>
      <% end %>
    </div>

  </div>
</div>
