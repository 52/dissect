<div class="col-md-4 portfolio-item", id="<%= portfolio_item.id %>">
  <div class="card mb-4 box-shadow">

    <%= image_tag portfolio_item_image(portfolio_item, thumb: true), width: "100%" %>

    <div class="card-body">

      <%= link_to tag.h3(portfolio_item.title),
                  portfolio_show_path(portfolio_item) %>

      <p class="card-text">
        <%= portfolio_item.subtitle %>
      </p>

      <% if logged_in? :site_admin %>
        <div class="d-flex justify-content-between align-items-center">
          <div class="btn-group">
            <%= link_to "Edit", edit_portfolio_path(portfolio_item),
                          type: "button",
                          class: "btn btn-sm btn-outline-secondary" %>

            <%= link_to "Delete", portfolio_item, method: :delete,
                          data: {confirm: "You sure?"}, type: "button",
                          class: "btn btn-sm btn-outline-secondary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
