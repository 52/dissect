<%= form_for @portfolio_item do |f| %>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control", autofocus: "true" %>
        <%= render "shared/form_field_error_message", object: @portfolio_item, field: :title %>

      </div>

      <div class="form-group">
        <%= f.label :subtitle %>
        <%= f.text_field :subtitle, class: "form-control" %>
        <%= render "shared/form_field_error_message", object: @portfolio_item, field: :subtitle %>

      </div>

      <div class="form-group">
        <%= f.label :image %>
        <%= f.file_field :image, class: "form-control" %>
        <small class="text-muted">Should be width: 600px, height: 400px</small>
        <%= render "shared/form_field_error_message", object: @portfolio_item, field: :image %>
      </div>

    </div>

    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, class: "form-control", rows: "12" %>
        <%= render "shared/form_field_error_message", object: @portfolio_item, field: :body %>
      </div>
    </div>

    <div class="col-md-12">
      <h2>Technologies used:</h2>
      <div class="form-group">
        <%= f.fields_for :technologies do |technology_form| %>
          <%= render "technology_fields", f: technology_form %>
        <% end %>
      </div>
      <div class="form-group">
        <%= link_to_add_association "Add technology", f, :technologies %>
      </div>
    </div>

    <div class="form-group">
      <%= f.submit class: "btn btn-primary" %>
    </div>

  </div>
<% end %>

<%= render "shared/highlight_error_form_field" %>
